{
    "name": "comic-generator",
    "dockerFile": "Dockerfile",
    "runArgs": [
        // Uncomment the line if you will use a ptrace-based debugger like C++, Go, and Rust.
        // "--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined",
        // allow all capabilities
        "--cap-add=ALL",
        // mount docker socket
        "-v",
        "/var/run/docker.sock:/var/run/docker.sock",
        // run with host network
        "--net",
        "host",
        // run in host pid namespace
        "--pid",
        "host",
        // run in host user namespace
        "--userns",
        "host",
        // run as privileged container
        "--privileged"
    ],
    "mounts": [
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.aws,target=/root/.aws,type=bind,consistency=cached",
    ],
    "workspaceMount": "source=${localWorkspaceFolder},target=/root/comic-generator,type=bind",
    "workspaceFolder": "/root/comic-generator",
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    
}
